# 以太坊节点配置
ETH_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY
ETH_WS_URL=wss://goerli.infura.io/ws/v3/YOUR_INFURA_KEY

# 合约地址
ROLE_MANAGER_ADDRESS=0x...
FEE_MANAGER_ADDRESS=0x...
PROPERTY_REGISTRY_ADDRESS=0x...
TOKEN_FACTORY_ADDRESS=0x...
MARKETPLACE_ADDRESS=0x...
RENT_DISTRIBUTOR_ADDRESS=0x...
REDEMPTION_MANAGER_ADDRESS=0x...
TOKEN_HOLDER_QUERY_ADDRESS=0x...
REAL_ESTATE_SYSTEM_ADDRESS=0x...

# 日志配置
LOG_LEVEL=info
LOG_OBJECTS=false
CONSOLE_DETAILED_EVENTS=true

# 区块监控配置
BLOCKS_TO_FETCH=5000           # 初始化时获取的块数量
POLLING_INTERVAL=15000         # 轮询间隔，单位：毫秒
ENABLE_HISTORICAL_EVENTS=true  # 是否启用历史事件扫描
ENABLE_REAL_TIME_EVENTS=true   # 是否启用实时事件监听
SAVE_EVENTS_TO_FILE=false      # 是否将事件保存到文件
MERGE_BLOCK_EVENTS=false       # 是否合并相同区块的事件

# 连接设置
RECONNECT_DELAY=5000           # WebSocket断开后重连延迟(毫秒)
CONNECTION_CHECK_INTERVAL=30000 # 连接检查间隔(毫秒)
MAX_RECONNECT_ATTEMPTS=10      # 最大重连尝试次数 