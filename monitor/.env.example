# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=blockchain_monitor
DB_SSL=false

# 区块链网络配置
# 这些应该来自根目录的.env文件，这里只是备份
NODE_ENV=development
BLOCKCHAIN_NETWORK=localhost
PROVIDER_URL=http://localhost:8545

# 监控服务配置
# 定时任务表达式，默认每分钟执行一次
MONITOR_CRON=* * * * *
# 每次扫描的区块数量
BLOCKS_PER_SCAN=100
# 确认区块数
CONFIRMATIONS=12
# 重试次数
MAX_RETRIES=3
# 重试间隔（毫秒）
RETRY_INTERVAL=5000

# 日志配置
LOG_LEVEL=info
LOG_DIR=logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# 服务器配置（如果需要API）
PORT=3000
HOST=localhost 