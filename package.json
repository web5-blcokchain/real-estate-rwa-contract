{
  "name": "japan-rwa",
  "version": "0.1.0",
  "description": "Japanese Real Estate Tokenization Platform",
  "private": true,
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:shared": "mocha test/shared/**/*.test.js",
    "test:coverage": "hardhat coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "deploy:local": "hardhat run scripts/deploy-step.js --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy-step.js --network testnet",
    "deploy:mainnet": "hardhat run scripts/deploy-step.js --network mainnet",
    "verify:testnet": "hardhat run scripts/verify-deployment.js --network testnet",
    "verify:mainnet": "hardhat run scripts/verify-deployment.js --network mainnet",
    "dev:http": "cd http-server && yarn dev",
    "start:node": "hardhat node",
    "test:env": "node test-env.js"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/contracts-upgradeable": "4.9.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.0.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.13.14",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "chai": "^4.3.10",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "hardhat": "^2.20.1",
    "hardhat-gas-reporter": "^1.0.10",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "sinon": "^20.0.0",
    "solidity-coverage": "^0.8.5",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "packageManager": "yarn@1.22.19"
}
