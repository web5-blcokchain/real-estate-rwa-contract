    "dotenv": "^16.0.3",
    "ethers": "^6.11.1",
    "hardhat": "^2.14.0",
    "express": "^4.18.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "chai": "^4.3.7",
    "ethereum-waffle": "^4.0.10",
    "eslint": "^8.57.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.0"
  }
