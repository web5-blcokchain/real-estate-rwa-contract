{
  "name": "japan-rwa",
  "version": "1.0.0",
  "description": "日本房地产代币化平台",
  "scripts": {
    "server:start": "node server/src/index.js",
    "server:dev": "nodemon server/src/index.js",
    "server:test": "jest",
    "server:test:api": "ts-node server/scripts/test-api.ts",
    "server:test:flow": "node server/scripts/test-flow.js",
    "server:test:optimization": "node server/scripts/test-server-optimization.js",
    "server:perf": "node server/scripts/performance-test.js",
    "server:perf:stress": "node server/scripts/performance-test.js --mode=stress --duration=60",
    "server:perf:concurrent": "node server/scripts/performance-test.js --mode=concurrent --requests=1000 --concurrency=50",
    "frontend:test": "node frontend-tests/scripts/run-tests.js",
    "monitor:start": "node monitor/src/index.js",
    "monitor:dev": "nodemon monitor/src/index.js",
    "monitor:check": "node monitor/scripts/check-contracts.js",
    "contracts:compile": "hardhat compile",
    "contracts:test": "hardhat test",
    "contracts:deploy": "hardhat run scripts/deploy-unified.js",
    "contracts:deploy:testnet": "hardhat run scripts/deploy-unified.js --network testnet",
    "contracts:deploy:mainnet": "hardhat run scripts/deploy-unified.js --network mainnet",
    "contracts:verify": "hardhat run scripts/verify-contracts.js",
    "contracts:verify:testnet": "hardhat run scripts/verify-contracts.js --network testnet",
    "contracts:verify:mainnet": "hardhat run scripts/verify-contracts.js --network mainnet",
    "update-abis": "node shared/utils/updateAbis.js",
    "hardhat:node": "hardhat node --hostname 0.0.0.0 --port 8545",
    "hardhat:node:reset": "hardhat node --hostname 0.0.0.0 --port 8545 --reset",
    "dev": "concurrently \"npm run hardhat:node\" \"npm run server:dev\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "_moduleAliases": {
    "@shared": "./shared",
    "@server": "./server/src",
    "@monitor": "./monitor/src"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ethers": "^5.7.2",
    "web3": "^1.8.2",
    "jsonwebtoken": "^9.0.0",
    "bcrypt": "^5.1.0",
    "moment": "^2.29.4",
    "uuid": "^9.0.0",
    "node-cron": "^3.0.2",
    "yargs": "^17.7.2",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/contracts": "^5.2.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/redis": "^4.0.11",
    "@types/sinon-chai": "^3.2.12",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/uuid": "^9.0.0",
    "@types/web3": "^1.2.2",
    "@types/node-cron": "^3.0.7",
    "eslint": "^8.57.0",
    "ethereum-waffle": "^4.0.10",
    "hardhat": "^2.19.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "sinon": "^15.0.1"
  }
}
