{
  "name": "japan-rwa",
  "version": "1.0.0",
  "description": "日本房地产代币化平台",
  "scripts": {
    "test:frontend": "node frontend-tests/scripts/run-tests.js",
    "test:server": "cd server && npm test",
    "start:server": "cd server && npm start",
    "start:monitor": "cd monitor && npm start",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "update-abis": "node scripts/update-abis.js",
    "deploy": "hardhat run scripts/deploy-unified.js",
    "deploy:testnet": "hardhat run scripts/deploy-unified.js --network testnet",
    "deploy:mainnet": "hardhat run scripts/deploy-unified.js --network mainnet",
    "verify": "hardhat run scripts/verify-contracts.js",
    "verify:testnet": "hardhat run scripts/verify-contracts.js --network testnet",
    "verify:mainnet": "hardhat run scripts/verify-contracts.js --network mainnet"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/contracts": "^5.2.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "@types/sinon-chai": "^3.2.12",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^6.13.5",
    "hardhat": "^2.19.5"
  }
}
