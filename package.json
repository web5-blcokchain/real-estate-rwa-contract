{
  "name": "japan-rwa",
  "version": "1.0.0",
  "description": "日本房地产代币化平台",
  "scripts": {
    "server:start": "NODE_ENV=production node http-server/src/index.js",
    "server:dev": "NODE_ENV=development nodemon http-server/src/index.js",
    "server:test:apiTest": "NODE_ENV=test node http-server/tests/apiTest.js",
    "server:clean:test-results": "find http-server/test-results -name \"test-result-*.json\" -type f -not -name \"$(ls -t http-server/test-results/test-result-*.json | head -1 | xargs basename)\" -delete",
    "contracts:compile": "hardhat compile && node scripts/update-shared-abis.js",
    "contracts:test": "hardhat test",
    "contracts:deploy": "hardhat run scripts/deploy-with-new-architecture.js",
    "contracts:deploy:force": "FORCE_DEPLOY=true hardhat run scripts/deploy-with-new-architecture.js",
    "contracts:deploy:testnet": "hardhat run scripts/deploy-with-new-architecture.js --network testnet",
    "contracts:deploy:mainnet": "hardhat run scripts/deploy-with-new-architecture.js --network mainnet",
    "contracts:deploy:verify": "VERIFY_CONTRACTS=true hardhat run scripts/deploy-with-new-architecture.js",
    "contracts:deploy:token-impl": "hardhat run scripts/deploy-token-implementation.js",
    "contracts:deploy:complete": "FORCE_DEPLOY=true RUN_TESTS=true hardhat run scripts/deploy-with-new-architecture.js",
    "contracts:verify:deployment": "hardhat run scripts/verify-deployment.js",
    "contracts:verify:testnet": "hardhat run scripts/verify-deployment.js --network testnet",
    "contracts:verify:mainnet": "hardhat run scripts/verify-deployment.js --network mainnet",
    "contracts:test:deployment": "hardhat run scripts/tests/deployment-test.js --network localhost",
    "contracts:test:basic": "hardhat run scripts/tests/basic-processes-test.js",
    "contracts:test:business": "hardhat run scripts/tests/business-processes-test.js --network localhost",
    "contracts:test:business-flow": "hardhat run scripts/tests/business-flow-test.js",
    "contracts:test:contracts-loading": "hardhat run scripts/tests/verify-contracts-loading.js --network localhost",
    "contracts:test:flow": "hardhat run scripts/tests/test-flow.js --network localhost",
    "contracts:test:all": "npm run contracts:test:basic && npm run contracts:test:business-flow",
    "contracts:setup:roles": "hardhat run scripts/setup-roles.js",
    "contracts:test:roles": "hardhat run scripts/test-property-manager-role.js",
    "hardhat:node": "  npx hardhat node --hostname 127.0.0.1 --port 8545  ",
    "dev": "concurrently \"yarn hardhat:node\" \"yarn server:dev\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "_moduleAliases": {
    "@shared": "./shared",
    "@http": "./http-server/src"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "bcrypt": "^5.1.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ethers": "^6.11.1",
    "express": "^4.18.3",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.3",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2",
    "table": "^6.8.1",
    "uuid": "^9.0.0",
    "web3": "^1.8.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@openzeppelin/contracts": "^5.2.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^20.11.19",
    "@types/node-cron": "^3.0.7",
    "@types/redis": "^4.0.11",
    "@types/sinon-chai": "^3.2.12",
    "@types/uuid": "^9.0.0",
    "@types/web3": "^1.2.2",
    "chai": "^4.3.7",
    "eslint": "^8.57.0",
    "hardhat": "^2.19.5",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.0",
    "sinon": "^15.0.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
