{
  "name": "japan-rwa",
  "version": "1.0.0",
  "description": "Japanese Real Estate Tokenization System",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:testnet": "hardhat run scripts/deploy.js --network testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "verify:testnet": "hardhat verify --network testnet",
    "verify:mainnet": "hardhat verify --network mainnet",
    "server:start": "node server/src/index.js",
    "server:dev": "nodemon server/src/index.js",
    "monitor:start": "node monitor/src/index.js",
    "monitor:dev": "nodemon monitor/src/index.js"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.0",
