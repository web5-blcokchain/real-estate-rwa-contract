                  "propertyId",
                  "country",
                  "metadataURI",
                  "initialSupply",
                  "tokenName",
                  "tokenSymbol"
                ],
                "properties": {
                  "propertyId": {
                    "type": "string",
                    "description": "房产ID"
                  },
                  "country": {
                    "type": "string",
                    "description": "国家"
