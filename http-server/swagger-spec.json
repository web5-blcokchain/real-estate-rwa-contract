              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "房产注册成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Success"
                }
              }
            }
          },
          "400": {
            "description": "参数错误或合约错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/real-estate/property/{propertyId}": {
      "get": {
