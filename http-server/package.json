{
  "name": "japan-rwa-http-server",
  "version": "1.0.0",
  "type": "module",
  "description": "不动产系统HTTP API服务",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:api": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js tests/api.test.js",
    "test:system": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js tests/system.test.js",
    "test:roles": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js tests/roles.test.js",
    "test:property": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js tests/property.test.js",
    "test:trading": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js tests/trading.test.js",
    "test:reward": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js tests/reward.test.js",
    "test:all": "NODE_ENV=test node tests/run-tests.js",
    "docs": "swagger-jsdoc -d swaggerDef.js -o swagger.json"
  },
  "dependencies": {
    "express": "^4.18.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "cors": "^2.8.5",
    "helmet": "^6.1.5",
    "ethers": "^6.3.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3"
  }
} 