# Network Configuration
NETWORK_TYPE=hardhat # hardhat, testnet, mainnet
TESTNET_RPC_URL=https://sepolia.infura.io/v3/your-project-id
MAINNET_RPC_URL=https://mainnet.infura.io/v3/your-project-id

# Account Configuration
DEPLOYER_PRIVATE_KEY=your_private_key_here
ADMIN_ADDRESS=0x... # System admin address
MANAGER_ADDRESS=0x... # Property manager address
OPERATOR_ADDRESS=0x... # System operator address

# API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key

# Gas Configuration
GAS_LIMIT=3000000
GAS_PRICE=auto

# System Configuration
LOG_LEVEL=info
LOG_DIR=logs

# Contract Configuration
UPGRADE_DELAY=86400 # 24 hours in seconds
EMERGENCY_DELAY=300 # 5 minutes in seconds
MAX_UPGRADE_ATTEMPTS=3