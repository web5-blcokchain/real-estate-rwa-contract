# 环境配置
NODE_ENV=testnet
LOG_LEVEL=info
LOG_DIR=logs

# 网络配置
HARDHAT_CHAIN_ID=31337
TESTNET_CHAIN_ID=11155111
MAINNET_CHAIN_ID=1

# RPC URLs
TESTNET_RPC_URL=https://sepolia.infura.io/v3/your-project-id
MAINNET_RPC_URL=https://mainnet.infura.io/v3/your-project-id

# 账户配置
DEPLOYER_PRIVATE_KEY=your_private_key_here
ADMIN_ADDRESS=your_admin_address
MANAGER_ADDRESS=your_manager_address
OPERATOR_ADDRESS=your_operator_address

# Etherscan配置
ETHERSCAN_API_KEY=your_etherscan_api_key
ETHERSCAN_API_URL=https://api-testnet.etherscan.io
ETHERSCAN_BROWSER_URL=https://testnet.etherscan.io

# Gas配置
GAS_LIMIT=3000000
GAS_PRICE=auto
REPORT_GAS=true

# 服务器配置
PORT=3000
HOST=localhost

# 监控配置
MONITOR_INTERVAL=60000
ALERT_THRESHOLD=0.1

# 合约配置
CONTRACT_VERIFY=true
CONTRACT_OPTIMIZER_RUNS=200

# 业务配置
MIN_INVESTMENT_AMOUNT=0.1
MAX_INVESTMENT_AMOUNT=100
REWARD_RATE=0.05

# Contract Configuration
UPGRADE_DELAY=86400 # 24 hours
EMERGENCY_DELAY=300 # 5 minutes
MAX_UPGRADE_ATTEMPTS=3

# Business Configuration
MIN_PROPERTY_VALUE=100000 # 最小房产价值（美元）
MAX_PROPERTY_VALUE=10000000 # 最大房产价值（美元）
TRADING_FEE_RATE=25 # 交易费率（基点，1基点=0.01%）
MIN_TRADING_FEE=100 # 最小交易费用（美元）
MAX_TRADING_FEE=10000 # 最大交易费用（美元）
MIN_REWARD=50 # 最小奖励（美元）
MAX_REWARD=5000 # 最大奖励（美元） 